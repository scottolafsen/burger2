<img src="//i.imgur.com/YYrNtr2.jpg" alt="burger">

<h1>Eat Da Burger</h1>

<h2>Burgers</h2>

<ul class="burgers">
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	{{burger_name}}

	<button class="devour" data-id="{{id}}" >
	Devour!
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul class="devoured-burger">
  {{#each burgers}}
    {{#if devoured}}
      {{ burger_name  }}
      <br>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter Burger Name</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
